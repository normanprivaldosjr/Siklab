<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_quiz"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="QUIZ"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="60sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are about to take Quiz 1"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"/>

            <TextView
                android:id="@+id/subtitle_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This quiz will focus on Lesson 1:"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>

            <TextView
                android:id="@+id/subtitle_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Understanding the Nature of Fire"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"/>

            <Button
                android:id="@+id/quiz_btn"
                android:text="Take Quiz"
                style="@style/buttonStyle"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>